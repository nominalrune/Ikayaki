<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ikayaki.Page.MainPage">
    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Go to Today's page"
            Margin="20"
            VerticalOptions="Center"
                Clicked="OnTodayPageButtonClicked" />
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="View All Records"
            Margin="20"
            VerticalOptions="Center"
                Clicked="OnIndexButtonClicked" />
            <Button Text="Create New Records"
            Margin="20"
            VerticalOptions="Center"
                Clicked="OnCreateButtonClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
