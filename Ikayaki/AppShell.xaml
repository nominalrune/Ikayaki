<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ikayaki.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ikayaki"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="DarkSlateBlue">
            <Image Source="moon.png" />
        </Grid>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Moon Phase" Icon="dotnet_bot.png">
        <ShellContent  Title="new task" Icon="dotnet_bot.png"
        ContentTemplate="{DataTemplate local:TaskCreate}"/>
        <ShellContent  Title="Index" Icon="dotnet_bot.png"
        ContentTemplate="{DataTemplate local:TaskIndex}"/>
    </FlyoutItem>
    <FlyoutItem Title="Moon Phase" Icon="dotnet_bot.png">
        <ShellContent  Title="new task" Icon="dotnet_bot.png"
        ContentTemplate="{DataTemplate local:TaskCreate}"/>
        <ShellContent  Title="Index" Icon="dotnet_bot.png"
        ContentTemplate="{DataTemplate local:TaskIndex}"/>
    </FlyoutItem>
    <FlyoutItem Title="About" Icon="dotnet_bot.png">
        <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>
</Shell>
